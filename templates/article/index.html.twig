{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/article">Blog</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/article">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/article/new">Create article</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">

            {% for article in articles %}
                <div class="col-sm-6" style="padding:15px">
                    <div class="card">
                        <div class="card-header">
                            Created on {{ article.creationDate ? article.creationDate|date('d-m-Y H:i:s') : '' }}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.text }}</p>
                            <a href="/article/{{ article.id }}">Read full article</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
